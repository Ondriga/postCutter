<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/erase_view_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/rectangle_innerRectangleMargin">

        <ImageView
            android:id="@+id/erase_view_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"/>

    </RelativeLayout>


    <View
        android:id="@+id/erase_top_shadow"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@color/transparent_black" />

    <View
        android:id="@+id/erase_left_shadow"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@color/transparent_black" />

    <View
        android:id="@+id/erase_bottom_shadow"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@color/transparent_black" />

    <View
        android:id="@+id/erase_right_shadow"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@color/transparent_black" />

    <postCutter.fe.postcutter.customViews.rectangle.RectangleView
        android:id="@+id/erase_view_rectangleView"
        android:layout_width="300px"
        android:layout_height="300px" />

</RelativeLayout>