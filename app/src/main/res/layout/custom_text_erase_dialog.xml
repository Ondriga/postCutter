<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/setting_button_margin">

    <RadioGroup
        android:id="@+id/textEraseDialog_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_button_margin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/textEraseDialog_radioButton_Telea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_button_margin"
            android:background="@drawable/radio_button_background"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/icon_settings"
            android:gravity="center"
            android:padding="@dimen/setting_button_margin"
            android:text="@string/telea_method" />

        <RadioButton
            android:id="@+id/textEraseDialog_radioButton_NS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_button_margin"
            android:background="@drawable/radio_button_background"
            android:button="@null"
            android:drawableBottom="@drawable/icon_settings"
            android:gravity="center"
            android:padding="@dimen/setting_button_margin"
            android:text="@string/ns_method" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>