<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CutterActivity"
    android:background="@drawable/activity_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/cutter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_launcher_background" />

    </RelativeLayout>

    <View
        android:id="@+id/cutter_topView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/top_cropping_line"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_bottomView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/bottom_cropping_line"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_leftView"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/left_cropping_line"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_rightView"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/right_cropping_line"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_topViewShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cropping_line_shadow"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_bottomViewShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cropping_line_shadow"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_leftViewShadow"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/cropping_line_shadow"
        android:visibility="invisible"/>

    <View
        android:id="@+id/cutter_rightViewShadow"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/cropping_line_shadow"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/cutter_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cropping_icon"
            android:layout_marginBottom="1dp"
            android:padding="20dp"
            android:background="@drawable/icon_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>